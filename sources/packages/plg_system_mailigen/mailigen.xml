<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
    <name>plg_system_mailigen</name>
    <creationDate>2018-09-27</creationDate>
    <copyright>2010-2018 Mailigen. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Mailigen</author>
    <authorEmail>sales@mailigen.com</authorEmail>
    <authorUrl>https://www.mailigen.com/</authorUrl>
    <version>1.0.0</version>
    <description>Adding newsletter options to your Joomla contact froms.</description>  

	<files>
		<filename plugin="mailigen">mailigen.php</filename>
        <filename>index.html</filename>
        <folder>fields</folder>
        <folder>contacts</folder>
	</files>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_mailigen.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_mailigen.sys.ini</language>
    </languages>

    <config>
        <fields name="params">

            <fieldset name="basic" addfieldpath="/plugins/system/mailigen/fields">

                <field 
                    name="listid" 
                    type="lists" 
                    default="" 
                    required="1"
                    label="PLG_SYSTEM_MAILIGEN_NEWS_LETTER_LIST_TEXT" 
                    description="PLG_SYSTEM_MAILIGEN_NEWS_LETTER_LIST_DESC"/>

                <field 
                    name="double_optin" 
                    type="radio" 
                    default="1" 
                    required="1"
                    label="PLG_SYSTEM_MAILIGEN_DOUBLE_OPTIN_TEXT" 
                    description="PLG_SYSTEM_MAILIGEN_DOUBLE_OPTIN_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field 
                    name="update_existing" 
                    type="radio" 
                    default="0" 
                    required="1"
                    label="PLG_SYSTEM_MAILIGEN_UPDATE_EXISTING_TEXT" 
                    description="PLG_SYSTEM_MAILIGEN_UPDATE_EXISTING_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                 <field 
                    name="send_welcome" 
                    type="radio" 
                    default="0" 
                    required="1"
                    label="PLG_SYSTEM_MAILIGEN_SEND_WELCOME_TEXT" 
                    description="PLG_SYSTEM_MAILIGEN_SEND_WELCOME_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

            </fieldset>

        </fields>
    </config>
</extension>
